<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>login.jsp*</pattern>
		<pattern>/views/error/authority.jsp</pattern>
		<pattern>/index.jsp</pattern>
		<pattern>/logout</pattern>
		<pattern>/account/forget/entrance</pattern>
		<pattern>/account/forget/restPwd/*/*/</pattern>
		<pattern>/task/showPanelDialog*</pattern>
		<pattern>/task/showRegionDialog*</pattern>
		
	</excludes>

	<decorator name="main" page="main.jsp">
		<pattern>/task/toTaskList*</pattern>
		<pattern>/task/toAdminTaskList*</pattern>
		<pattern>/task/toCreateTask*</pattern>
		<pattern>/task/showTask*</pattern>
		<pattern>/task/toModifyTask*</pattern>
		<pattern>/user/loadUsers*</pattern>
		<pattern>/user/jumpCreate*</pattern>
		<pattern>/user/jumpModify*</pattern>
	</decorator>

</decorators>